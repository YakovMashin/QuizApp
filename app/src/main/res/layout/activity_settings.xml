<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.dinocodeacademy.com.Settings">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Sound    "
            android:textSize="25sp"
            android:thumb="@drawable/switch_thumb"
            app:showText="true"
            app:track="@drawable/switch_track" />

        <ImageView
            android:id="@+id/sound_on"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/sound_on"
            android:layout_toRightOf="@+id/switchButton"
            android:layout_marginTop="40dp"
             />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"
            android:text="Timer time: "
            android:textColor="@color/white"
            android:textSize="25sp" />
        <EditText
            android:id="@+id/timerTime"
            android:layout_toRightOf="@+id/tv_set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/white"
            android:hint="30"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginLeft="70dp"/>
    </RelativeLayout>

    <Button
    android:id="@+id/bt_apply_changes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/go_gra_btn"
    android:layout_marginTop="25dp"
    android:padding="20dp"
    android:text="Apply Changes"
    android:textSize="15sp"
    />


</LinearLayout>